<div id="container1">
    </br>
    <p>Tên tài khoản : {{account}}</p>
    <p class="p2">Số dư : {{user.Balance}} $</p>
    <div class="two-buttons">
        <button type="submit" class="btn btn-primary" onclick="showContainer2()">Send money</button>
        <button type="submit" class="btn btn-primary">History</button>
    </div>
</div>

<div id="container2">
    <form action="/sendmoney" method="POST">
        <div>
            <div class="mb-3">
                <label for="sender" class="form-label">Sender</label>
                <input type="text" name="sender" value={{user.Owner}} placeholder={{user.Owner}} class="form-control"
                    id="sender" aria-describedby="emailHelp" readonly>
            </div>
            <div class="mb-3">
                <label for="receiver" class="form-label">Receiver</label>
                <select class="form-select" name="receiver" aria-label="Default select example">
                    {{#each this.alluser}}
                    <option name={{Owner}} value={{Owner}}>{{Owner}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Your Password</label>
                <input type="password" name="password" class="form-control" id="exampleInputPassword1">
            </div>
            <div>
                <div class="mb-3">
                    <label for="money" class="form-label">Money</label>
                    <input type="number" name="money" class="form-control" id="money" aria-describedby="emailHelp">
                </div>
                <button type="submit" class="btn btn-primary" onclick="showContainer1()">Send</button>
                </br>
                </br>
    </form>
</div>

<div id="confirm-form">
    <p>Bạn có chắc chắn muốn chuyển tiền không?</p>
    <button type="button" id="confirm-yes">Có</button>
    <button type="button" id="confirm-no">Không</button>
</div>



<style>
    #container1 {
        font-size: 1.5em;
        width: 25vw;
        height: 40vh;
        margin-left: 37.5vw;
        margin-top: 20vh;
        border: 1px solid black;
    }

    #container1 .p2 {
        color: green;
    }

    .two-buttons {
        display: flex;
        justify-content: space-between;
    }

    .button {
        width: 25%;
        height: 35%;
        border: 1px solid black;
    }

    #container2 {
        font-size: 1.2em;
        width: 30vw;
        height: 60vh;
        margin-left: 35vw;
        margin-top: 10vh;
        display: none;
        position: absolute;
    }

    #confirm-form {
        width: 30vw;
        height: 60vh;
        margin-left: 35vw;
        margin-top: 10vh;
        display: none;
    }
</style>


<script>
    function showContainer2() {
        var container2 = document.getElementById("container2");
        var container1 = document.getElementById("container1")
        container2.style.display = "block";
        container1.style.display = "none";
    }
    function showContainer1() {
        var container1 = document.getElementById("container1");
        var container2 = document.getElementById("container2");
        container1.style.display = "block";
        container2.style.display = "none";
    }

</script>