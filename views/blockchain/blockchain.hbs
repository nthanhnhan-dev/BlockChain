<div id="container">
    <div id="panel-blockchain">
        {{#each this.data}}
        <div class="block">
            <div class="prehash" style="white-space: pre-wrap; max-width: 370px;padding-left:5px;padding-right:5px; ">
                PREHASH: {{PREHASH}}</div>
            <div class="content">
                <p>Sender: {{Sender}}</p>
                <p>Receiver: {{Receiver}}</p>
                <p>Content: {{MESSAGE}}</p>
                <p>Amount: {{AMOUNT}}</p>
                <p>Time: {{TIMESTAMP}}</p>
                <p>Block {{ID_BLOCK}}</p>
            </div>
            <div class="curhash" style="white-space: pre-wrap; max-width: 370px;padding-left:5px;padding-right:5px;">
                HASH: {{HASH}}</div>
        </div>
        {{/each}}
    </div>
    <div hidden="true">{{data}},{{n}}</div>

</div>

<style>
    .block {
        border: 1px #ccc;
        background-color: white;
        text-align: center;
        max-width: 380px;
        display: inline-block;
        border: 1px solid;
        display: grid;
        grid-template-rows: 1fr 5fr 1fr;
    }

    .content {
        border-top: 1px solid black;
        border-bottom: 1px solid black;

    }

    .prehash {
        overflow-wrap: break-word;


    }

    .curhash {
        overflow-wrap: break-word;


    }


    #container {
        width: 100%;
        height: 100vh;

    }

    #container #panel-blockchain {
        overflow-y: scroll;
        display: grid;
        height: 90%;
        width: 95%;
        grid-gap: 5%;
        grid-template-columns: repeat(3, 1fr);
        border: 1px solid;
        margin-top: 5%;
        margin-left: 2.5%;
    }
</style>