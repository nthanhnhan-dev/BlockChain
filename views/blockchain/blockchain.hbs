                    </br>
                    <p>Content: </p> {{MESSAGE}}
                    </br>
                    </br>
                    <p>Amount: </p> {{AMOUNT}}
                    </br>
                    <p id="timeblock">Time: </p> {{TIMESTAMP}}
                    </br>
                    </br>
                    <p id="idblock">Block {{ID_BLOCK}}</p>
                </div>
            </div>
            <div class="curhash">
                <p>CURHASH:</p>
                {{HASH}}
            </div>
        </div>
        {{/each}}

    </div>

    <div hidden="true">{{data}},{{n}}</div>
</div>


<script>
    function changeColor() {
        const listcolor = [
            'red', 'blue', 'purple', 'green', 'brown', 'orange', 'pink',
            "BlueViolet",
            "BurlyWood",
            "CadetBlue",
            "Chartreuse",
            "Chocolate",
            "CornflowerBlue",
            "Crimson",
            "Cyan",
            "DarkBlue",
            "DarkGoldenRod",
            "DarkGreen",
            "DarkKhaki",
            "DarkMagenta",
            "DarkOliveGreen",
            "DarkOrange",
            "DarkOrchid",
            "DarkRed",
            "DarkSalmon",
            "DarkSeaGreen",
            "DarkSlateBlue",
            "DarkSlateGray",
            "DarkSlateGrey",
            "DarkTurquoise",
            "DarkViolet",
            "DeepPink",
            "DimGray",
            "DimGrey",
            "DodgerBlue",
            "FireBrick",]
        const n = listcolor.length;
        const hashBlocks = document.querySelectorAll('.curhash');

        let i = 2

        const connections = document.querySelectorAll('.connection');
        connections.forEach(connection => connection.parentNode.removeChild(connection));


        hashBlocks.forEach((block, index) => {

            // Lấy khối hash của khối tiếp theo
            block.style.color = listcolor[index % n]

            if (i < hashBlocks.length) {
                const nextBlock = block.parentNode.nextElementSibling.querySelector('.prehash');
                console.log(nextBlock)

                nextBlock.style.color = listcolor[index % n]
                i++
                console.log(i)

            }
        });
    }

    window.addEventListener('load', () => {
        changeColor();

    });

</script>
